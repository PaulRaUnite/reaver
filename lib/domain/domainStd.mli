(** domain manager for convex polyhedra with strict inequalities *)
module StrictPol : Domain.BDDAPRON_MAN_T

(** logico-numerical power domain with convex polyhedra 
    without strict inequalities *)
module LoosePolPow : Domain.NOPARAM_T

(** logico-numerical product domain with convex polyhedra 
    without strict inequalities *)
module LoosePolProd : Domain.NOPARAM_T

(** logico-numerical power domain with convex polyhedra 
    with strict inequalities *)
module StrictPolPow : Domain.NOPARAM_T

(** logico-numerical product domain with convex polyhedra 
    with strict inequalities *)
module StrictPolProd : Domain.NOPARAM_T


